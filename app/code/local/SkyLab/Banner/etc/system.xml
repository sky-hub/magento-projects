                                <!--<library>1</library>-->
                            <!--</depends>-->
                            <!--<comment><![CDATA[Use LTR display. Useful for arabic websites.]]></comment>-->
                        <!--</use_ltr>-->
                    </fields>
                </settings>
            </groups>
        </SkyLab_Banner>
    </sections>
</config>
