<?xml version="1.0"?>
<config>
    <tabs>
        <skylab translate="label" module="skylab_banner">
            <label>Sky Lab</label>
            <sort_order>200</sort_order>
        </skylab>
    </tabs>
    <sections>
        <SkyLab_Banner translate="label" module="skylab_banner">
            <label>Banners</label>
            <tab>skylab</tab>
            <frontend_type>text</frontend_type>
            <sort_order>20</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label" module="skylab_banner">
                    <label>Banners Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label" module="skylab_banner">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <library translate="label" module="skylab_banner">
                            <label>Used Library</label>
                            <frontend_type>select</frontend_type>
                            <source_model>skylab_banner/system_config_source_library</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </library>
                        <load_jquery translate="label" module="skylab_banner">
                            <label>Load jQuery</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                                <![CDATA[
                                Enable this option only if jQuery is not already loaded in your website. <br/>
                                <strong>Note:</strong> Loading multiple jQuery instances might generate conflicts between them, making extension unusable.
                                ]]>
                            </comment>
                        </load_jquery>
